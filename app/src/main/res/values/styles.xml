<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
    </style>

    <style name="TextToolbarStyle" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">34dp</item>
        <item name="android:fontFamily">@font/dancing_script_bold</item>
    </style>

    <style name="TextTabLayout" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/dancing_script_regular</item>
        <item name="android:background">@color/primary</item>

    </style>


</resources>